FROM node:24-alpine

# 启用 pnpm
RUN corepack enable && corepack prepare pnpm@latest --activate

WORKDIR /app

# 复制依赖文件
COPY package.json pnpm-lock.yaml ./

# 安装依赖
RUN pnpm install --frozen-lockfile

# 复制源代码
COPY . .

ENV DOCKER_ENV=true
ENV NODE_ENV=development

EXPOSE 3000

# 开发模式启动
CMD ["pnpm", "run", "dev"]
